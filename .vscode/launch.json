	"version": "0.2.0",
	"configurations": [
		{
			"name": "C++ Launch (Client)",
			"type": "cppdbg",
			"MIMode": "lldb",
			"request": "launch",
			"program": "${workspaceFolder}/build/Client/Client",
			"args": [
				"127.0.0.1",
				"5000",
			],
			"cwd": "${workspaceFolder}/build"
		},
		{
			"name": "C++ Launch (Server)",
			"type": "cppdbg",
			"MIMode": "lldb",
			"request": "launch",
			"program": "${workspaceFolder}/build/Server/Server",
			"args": [
				"../SslChat/Server/cert.pem",
				"../SslChat/Server/key.pem",
			],
			"cwd": "${workspaceFolder}/build"
		}
	]
}